/* ---------------------------- *\
    
    $Helpers

\* ---------------------------- */

*,
*:before,
*:after
    box-sizing border-box
  
html
    font-size(16)

html,
button,
input,
select,
textarea
    color $darkGrey

body
    line-height 1.4
    font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif

::-moz-selection
    background $darkGrey
    color white
    text-shadow none

::selection
    background $darkGrey
    color white
    text-shadow none

code::selection
    background-color $mmBlue

hr
    border 0
    padding 0
    height 1px
    margin 1em 0
    display block
    border-top 1px solid #ccc

img
    height auto
    max-width 100%
    vertical-align middle

fieldset
    border 0
    margin 0
    padding 0

textarea
    resize vertical

.chromeframe
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0

/* Declarating general styles for p and h$ */

p, li
    font-size(16)
h1, h2, h3, h4, h5, h6
    font-weight 700
h1, h2, h3, h4, h5, h6, p
    margin-top 0
h1, .alpha
    fontSize(27)
h2, .beta
    fontSize(24)
h3, .gamma
    fontSize(21)
h4, .delta
    fontSize(18)
h5, .epsilon
    fontSize(15)
h6, .zeta
    fontSize(12)
strong
    font-weight 700
a
    text-decoration none
    &:visited
        color inherit

.wrapper
    width 100%
    margin 0 auto
    max-width 1200px
    position relative

.row
    width 100%

.left
    float left

.right
    float right

.align
    width 100%
    height 100%
    display table
    > div
        display table-cell
        vertical-align middle

.flex
    display flex
    flex-wrap wrap
    &--no-wrap
        @extend .flex
        flex-flow column

.flex-centering
    centerFlexbox(true,true)

.overlay
    top 0
    left 0
    opacity 0
    z-index 5
    width 100%
    height 100%
    display block
    cursor pointer
    position fixed
    padding 40px 0
    overflow-y auto
    visibility hidden
    pointer-events none
    background-color rgba(0,0,0,.4)
    transition opacity .5s, visibility .5s, transform .4s
    -webkit-tap-highlight-color transparent
    -webkit-tap-highlight-color rgba(0,0,0,0)

.nondisplayed
    display none

.hide-item
    opacity 0
    visibility hidden
    transition opacity .3s ease-out, visibility .3s ease-out

.show-item
    opacity 1
    visibility visible
    transition opacity .3s ease-out, visibility .3s ease-out

.responsive-video
    .content
        height 0
        clear both
        margin 2em 0
        overflow hidden
        padding-top 30px
        position relative
        padding-bottom 56.25% 
    iframe
        top 0
        left 0
        width 100%
        height 100%
        position absolute

.clearfix
    clearfix()

/* ---------------------------- *\
    
    $Media $Queries

\* ---------------------------- */

:root
    +above(1200)
        /* $min-width: $1200px */
        --section 4rem
        --space 4rem
    +between(768,1199)
        /* $min-width: $768px / $max-width: $1199px */
        --section 2.85rem
        --space 1.85rem
    +below(767)
        /* $max-width: $767px */
        --section 2rem
        --space 1rem

.section
    padding-top var(--section)
    padding-bottom var(--section)

.space
    padding-left var(--space)
    padding-right var(--space)